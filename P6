#include<stdio.h>
#include<stdlib.h>
#define MAX 5

int ch,item,front=0,rear=-1,count=0;
char q[MAX];

void insert(int item) {
	if(count==MAX) {
		printf("Queue is Full.\n");
		return;
	} else {
		rear=(rear+1)%MAX; 
		q[rear]=item;
		count++;
	}
}

void del() {
	if(count==0) {
		printf("\nQueue is Empty");
		return;
	} else {
		if(front>rear && rear==MAX-1) {
			front=0;	
			rear=-1;	
			count=0;
		} else {
			item=q[front];
			printf("Deleted item is: %d\n",item); 
			front=(front+1)%MAX;
			count--;
		}
	}
}

void display() {
	int i,f=front,r=rear; 

	if(count==0) {
		printf("Queue is Empty.\n");
	} else {
		printf("Contents of Queue is:\n"); 
		for(i=0;i<count;i++) {
			printf("%d\t",q[f]); 
			f=(f+1)%MAX;
		}
	}
	printf("\n");
}

void main() {
	do {
		printf("\n---Main Menu---\n");
		printf("1. Insert\n2. Delete\n3. Display\n4. Exit"); 

		printf("\nEnter the choice: ");
		scanf("%d",&ch); 
		switch(ch) {
			case 1: printf("Enter the character/item to be inserted: "); 
				scanf("%d",&item);
				insert(item); 
				break;
			case 2: del();
				break; 
			case 3: display();
				break; 
			case 4: exit(0);
				break;
			default:printf("Enter a valid input.\n");
		}
	} while(ch!=4);
}
